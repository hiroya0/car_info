<div class="container mt-4">
 <div class="card">
   <% if @article.urlToImage.present? %>
     <%= image_tag(@article.urlToImage, class: "card-img-top") %>
   <% else %>
     <p>いらすとやの画像を挿入する</p>
   <% end %>
   <div class="card-body">
     <h5 class="card-title"><%= @article.title %></h5>
     <p class="card-text">
       <%= @article.content %>
     </p>
     <a href="<%= @article.url %>" class="btn btn-primary" target="_blank">元の記事を読む</a>
   </div>
 </div>
</div>